#! /bin/sh
# image - creates a disk image
# Distributed with nexware, licensed under the MIT license
# See LICENSE

disktypes="mbr end"
disktype=
# Get the disk type
for type in $disktypes
do
    # Check if they equal
    if [ $type = $1 ] && [ "$type" != "end" ]
    then
        disktype=$1
        break
    elif [ "$type" = "end" ]
    then
        echo "image: Invalid disk type"
        exit 1
    fi
done

# Be sure that output file and image size are set
if [ -z "$2" ] || [ -z "$3" ]
then
    echo "image: Parameter not set"
    exit 1
fi

# Get output file
output=$2
# Convert size to bytes from mb
size=$(expr $3 \* 1024)
size=$(expr $size \* 1024)
# Now create and format it
dd if=/dev/zero of=$output bs=$size count=1
sleep 1
if [ "$disktype" = "mbr" ]
then
    # Partition it
    parted --script $output mklabel msdos mkpart p ext2 1M ${3}M set 1 boot on
fi
sleep 1
# Get loop device and setup the device
loopdev=$(losetup -Pf --show $output)
sleep 5
# Format data partition
mkfs.ext2 ${loopdev}p1
sleep 2

# Install GRUB
if [ "$4" != "--nogrub" ]
mkdir fs
mount ${loopdev}p1 fs
sleep 2
grub-install --no-floppy --root-directory=$PWD/fs $loopdev --target=i386-pc
sleep 2
cp conf/grub.cfg $PWD/fs/boot/grub/grub.cfg
fi
umount fs
rm -r fs

# Delete partitions
losetup -d $loopdev

# Change ownership of file to caller
name=$(logname)
chown $name $output
